<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="pk.edu.uaar.group_sports_club.sports_club.MainActivityAdmin">

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/viewTournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Tournament"/>
    <Button
        android:layout_below="@id/viewTournament"
        android:layout_centerHorizontal="true"
        android:id="@+id/addTournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Tournament"/>
    <Button
        android:layout_below="@id/addTournament"
        android:layout_centerHorizontal="true"
        android:id="@+id/deleteTournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Tournament"/>

    <Button
        android:id="@+id/logoutBtn"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deleteTournament"
        android:text="Logout"/>


</RelativeLayout>