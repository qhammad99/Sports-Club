<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpActivity"
    android:orientation="vertical"
    android:background="@drawable/logo_lower">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="73dp"
        android:layout_height="82dp"
        android:src="@drawable/logo_main"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:fontFamily="@font/armata"
        android:textAlignment="center"
        android:textColor="#fa1505"
        android:textSize="22sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corner_background"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:padding="5dp">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#5e17eb"
            android:textColorHint="#5e17eb"
            android:fontFamily="@font/average_sans"
            />

        <EditText
            android:id="@+id/etMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="17sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#5e17eb"
            android:textColorHint="#5e17eb"
            android:fontFamily="@font/average_sans"
            />

        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:inputType="text"
            android:textSize="17sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#5e17eb"
            android:textColorHint="#5e17eb"
            android:fontFamily="@font/average_sans"
            />

        <RadioGroup
            android:id="@+id/Gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textSize="17sp"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/average_sans"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="15sp"
                android:textColor="#087011"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#087011"/>
        </RadioGroup>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_rowSpan="3"
                android:textSize="17sp"
                android:paddingLeft="10dp"
                android:text="Skill:"
                android:fontFamily="@font/average_sans"
                android:textColor="@color/black" />
            <CheckBox
                android:id="@+id/batsman"
                android:text="Batsman"
                android:textColor="#693004"
                />
            <CheckBox
                android:id="@+id/bowler"
                android:text="Bowler"
                android:textColor="#693004"/>
            <CheckBox
                android:id="@+id/keeper"
                android:text="Keeper"
                android:textColor="#693004"/>
        </GridLayout>

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="17sp"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#5e17eb"
            android:textColorHint="#5e17eb"
            android:fontFamily="@font/average_sans"
            />

        <EditText
            android:id="@+id/cPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textSize="17sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#5e17eb"
            android:textColorHint="#5e17eb"
            android:fontFamily="@font/average_sans"
            />

        <Button
            android:id="@+id/sbtBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="sign up"
            android:textSize="15sp"
            android:backgroundTint="#5e17eb"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/signBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="You have an account? log in"
            android:textSize="14sp"
            android:textColor="@color/black"/>

    </LinearLayout>
</LinearLayout>