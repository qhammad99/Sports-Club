<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pk.edu.uaar.group_sports_club.sports_club.signUp2"
    android:orientation="vertical"
    android:background="@drawable/logo_lower">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="73dp"
        android:layout_height="82dp"
        android:src="@drawable/logo_main"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:contentDescription="@string/logo_description"/>

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signup2_label"
        android:fontFamily="@font/armata"
        android:textAlignment="center"
        android:textColor="#fa1505"
        android:textSize="26sp"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:orientation="vertical"
        android:background="@drawable/corner_background"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:padding="5dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_rowSpan="3"
                android:textSize="17sp"
                android:paddingLeft="10dp"
                android:text="@string/label_skill"
                android:fontFamily="@font/average_sans"
                android:textColor="@color/black" />
            <CheckBox
                android:id="@+id/batsman"
                android:text="@string/skill1"
                android:textColor="#693004"
                />
            <CheckBox
                android:id="@+id/bowler"
                android:text="@string/skill2"
                android:textColor="#693004"/>
            <CheckBox
                android:id="@+id/keeper"
                android:text="@string/skill3"
                android:textColor="#693004"/>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:paddingLeft="10dp"
                android:text="@string/label_batsman"
                android:fontFamily="@font/average_sans"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/Batsman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/batsman1"
                    android:textSize="15sp"
                    android:textColor="#087011"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/batsman2"
                    android:textSize="15sp"
                    android:textColor="#087011"/>
            </RadioGroup>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:paddingLeft="10dp"
                android:text="@string/label_bowler"
                android:fontFamily="@font/average_sans"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/Bowler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bowler1"
                    android:textSize="15sp"
                    android:textColor="#7a6816"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bowler2"
                    android:textSize="15sp"
                    android:textColor="#7a6816"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bowler3"
                    android:textSize="15sp"
                    android:textColor="#7a6816"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bowler4"
                    android:textSize="15sp"
                    android:textColor="#7a6816"/>
            </RadioGroup>
        </GridLayout>

    </LinearLayout>
    <Button
        android:id="@+id/sbtBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/btn_signup"
        android:textSize="15sp"
        android:backgroundTint="#5e17eb"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        />
</LinearLayout>